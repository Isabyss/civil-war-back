<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

  <changeSet id="202311251300" author="ddamjanovic">
    <createSequence sequenceName="resource_stock_id_seq" startValue="1" incrementBy="1"/>
    <createTable tableName="resource_stock">
      <column name="id" type="BIGINT" defaultValueSequenceNext="resource_stock_id_seq">
        <constraints primaryKey="true" primaryKeyName="pk_resource_stock_id" nullable="false"/>
      </column>
      <column name="player_base_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="quantity" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="resource_type" type="VARCHAR(10)">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="202311251301" author="ddamjanovic">
    <addForeignKeyConstraint baseColumnNames="player_base_id"
                             baseTableName="resource_stock"
                             constraintName="fk_resource_stock_player_base"
                             referencedColumnNames="id"
                             referencedTableName="player_base"/>
  </changeSet>

</databaseChangeLog>
